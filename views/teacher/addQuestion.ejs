</head>

<body>
	<ul>
		<li><a href="/teacher">Home</a></li>
		<li style="float:right"><a href="../../../../../logout">Log Out</a></li>
		<li style="float:right"><a href="/teacher/support">Support</a></li>
		<li style="float:right"><a href="/teacher/account">Account</a></li>
        <li style="float:right"><a href="/teacher/profile">Profile</a></li>
        <li style="float:right"><a class="active" href="/teacher/exam">Exam</a></li>
	</ul>
	
	<div class="limiter">
		<div class="container-login100" align="center">
            <form class="login100-form validate-form" method="POST" width="600px">
                <span class="login100-form-title">
                    Set Question
                </span>
                <table width="600px">
                        <tr>
                            <td>Question</td>
                            <td>:</td>
                            <td>
                                <div class="wrap-input100 validate-input" data-validate = "Title is required">
                                    <input class="input100" type="text" name="title" placeholder="Question Title">
                                    <span class="focus-input100"></span>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>Option 1</td>
                            <td>:</td>
                            <td>
                                <div class="wrap-input100 validate-input" data-validate = "Can't left empty">
                                    <input class="input100" type="text" name="op1" placeholder="Option 1">
                                    <span class="focus-input100"></span>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>Option 2</td>
                            <td>:</td>
                            <td>
                                <div class="wrap-input100 validate-input" data-validate = "Can't left empty">
                                    <input class="input100" type="text" name="op2" placeholder="Option 2">
                                    <span class="focus-input100"></span>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>Option 3</td>
                            <td>:</td>
                            <td>
                                <div class="wrap-input100 validate-input" data-validate = "Can't left empty">
                                    <input class="input100" type="text" name="op3" placeholder="Option 3">
                                    <span class="focus-input100"></span>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>Option 4</td>
                            <td>:</td>
                            <td>
                                <div class="wrap-input100 validate-input" data-validate = "Can't left empty">
                                    <input class="input100" type="text" name="op4" placeholder="Option 4">
                                    <span class="focus-input100"></span>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>Answer</td>
                            <td>:</td>
                            <td>
                                <div class="wrap-input100 validate-input" data-validate = "Can't left empty">
                                    <input class="input100" type="text" name="answer" placeholder="Answer">
                                    <span class="focus-input100"></span>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>Mark</td>
                            <td>:</td>
                            <td>
                                <div class="wrap-input100 validate-input" data-validate = "Can't left empty">
                                    <input class="input100" type="number" name="mark" placeholder="Mark">
                                    <span class="focus-input100"></span>
                                </div>
                            </td>
                        </tr>
                        <tr>
                                <td></td>
                                <td></td>
                                <td>
                                    <div class="container-login100-form-btn">
                                        <input type="submit" name="create" value="Create"class="login100-form-btn" />
                                    </div>
                                </td>
                            </tr>
                    </table>
            </form>
		</div>
	</div>
	
	<script src="/assets/login/vendor/jquery/jquery-3.2.1.min.js"></script>
	<script src="/assets/login/vendor/bootstrap/js/popper.js"></script>
	<script src="/assets/login/vendor/bootstrap/js/bootstrap.min.js"></script>
	<script src="/assets/login/vendor/select2/select2.min.js"></script>
	<script src="/assets/login/vendor/tilt/tilt.jquery.min.js"></script>
	<script >
		$('.js-tilt').tilt({
			scale: 1.1
		})
	</script>
	<script src="/assets/login/js/main.js"></script>

</body>
</html>